@using CRMSystem.ViewModels;
@using System.Text.Json;
@{
    using var fs = new FileStream("./wwwroot/files/default.json", FileMode.Open);
    var FieldValuesVM = JsonSerializer.Deserialize<FieldValuesViewModel>(fs);
    ViewData["Title"] = FieldValuesVM?.BlogMenuItemName ?? "Блог";
}
@model Blog

<main class="container">
    <div class="container-title">
        <h2>
            @Model.Name
        </h2>
    </div>
    <div class="separator-line"></div>
    <section class="description-block">
        <div>
            <p><time datetime=@Model.CreateAt.ToShortDateString()>@Model.CreateAt.ToShortDateString()</time></p>
        </div>
        <div class="article-desription-block">
            <div>
                <img class="blog" src="~/img/@Model.Photo" alt="photo"/>
            </div>
            <article class="article">
                @Model.Description
            </article>
        </div>
    </section>
</main>