<Window x:Class="CRMClientApp.Views.CRMWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:usercontrols="clr-namespace:CRMClientApp.Views.UserControls"
        xmlns:local="clr-namespace:CRMClientApp.ViewModels" 
        d:DataContext="{d:DesignInstance Type=local:CRMViewModel}"
        mc:Ignorable="d"
        Title="CRM-System" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Список пользователей"/>
            <MenuItem Header="Войти"/>
            <MenuItem Header="Выйти"/>
        </Menu>
        <TabControl>
            <TabItem Header="Главная">
                <usercontrols:AddingOrderControl/>
            </TabItem>
            <TabItem Header="Проекты">
                <usercontrols:ProjectsControl/>
            </TabItem>
            <TabItem Header="Услуги">
                <usercontrols:ServicesControl/>
            </TabItem>
            <TabItem Header="Блог">
                <usercontrols:BlogControl/>
            </TabItem>
            <TabItem Header="Контакты">
                <usercontrols:ContactsControl/>
            </TabItem>
        </TabControl>        
    </DockPanel>
</Window>
